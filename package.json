{
  "name": "stealthplane",
  "version": "1.0.0",
  "description": "A floating browser built with Electron that stays on top of other windows.",
  "main": "src/js/main.js",
  "scripts": {
    "package-win": "electron-packager . stealthplane --overwrite --platform=win32 --arch=ia32,x64 --prune=true --out=release-builds --icon=./src/assets/img/StealthPlane.ico",
    "package-mac": "electron-packager . stealthplane --overwrite --platform=darwin --arch=x64 --icon=./src/assets/img/StealthPlane.icns --prune=true --out=release-builds --no-symlink",
    "package-linux": "electron-packager . stealthplane --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds --icon=./src/assets/img/StealthPlane512.png",
    "package-linux-deb": "electron-installer-debian --src release-builds/stealthplane-linux-x64/ --arch amd64 --config debian.json",
    "package-linux-appimage": "electron-builder --linux AppImage",
    "package-linux-portable": "electron-packager . stealthplane --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds --executable-name=stealthplanePortable --icon=./src/assets/img/StealthPlane512.png",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "browser",
    "floating",
    "always-on-top"
  ],
  "author": "Mehdi Abdulhafiz",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.3.6",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "electron-capture": "^1.1.3",
    "electron-context-menu": "^3.6.1",
    "electron-pdf-window": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "yargs": "^17.7.2"
  }
}
